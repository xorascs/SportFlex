<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SportFlex</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SportFlex.styles.css" asp-append-version="true" />
    <link rel="shortcut icon" href="/ico.ico" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top border-bottom py-4">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/ico.ico" width="30" height="30" class="d-inline-block align-top" alt="">
                    SportFlex
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mr-auto flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">Products</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        @if (ViewBag.Role == "Admin")
                        {
                            <li class="nav-item dropdown">
                                <a 
                                    class="nav-link dropdown-toggle" 
                                    href="#" 
                                    id="adminDropdown" 
                                    role="button" 
                                    data-bs-toggle="dropdown" 
                                    aria-haspopup="true" 
                                    aria-expanded="false">
                                    Admin
                                </a>
                                <div class="dropdown-menu animate__animated animate__zoomIn" aria-labelledby="adminDropdown">
                                    <a class="dropdown-item" asp-area="" asp-controller="Users" asp-action="Index">Users</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Brands" asp-action="Index">Brands</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Categories" asp-action="Index">Categories</a>
                                    <a class="dropdown-item" asp-area="" asp-controller="Colors" asp-action="Index">Colors</a>
                                </div>
                            </li>
                        }
                        @if (ViewBag.Login != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Users" asp-action="MyPage">
                                    <img src="/ico.ico" width="30" height="30" class="d-inline-block align-top" alt="">
                                    @ViewBag.Login
                                    @Html.Raw(ViewBag.Role == "Admin" ? "<span class='badge bg-success'>A</span>" : "")
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Users" asp-action="LogOut">Log out</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 content-padding">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5 bg-light">
        <div class="container text-center py-3">
            &copy; 2024 - SportFlex
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    .navbar {
        margin-bottom: 1.5rem;
    }
    .nav-link:hover {
        transform: scale(1.06);
        transition: .3s ease;
    }

    body {
        background-color: #f8f9fa;
        overflow-x: hidden;
    }

    .content-padding {
        padding-top: 110px !important;
        padding-bottom: 70px !important;
    }
</style>

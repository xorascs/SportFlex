@model SportFlex.Models.Brand

@{
    ViewData["Title"] = "Edit Brand";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card mt-5 animate__animated animate__backInUp">
                <div class="card-header bg-primary text-white">
                    <h1 class="text-center animate__animated animate__delay-1s animate__fadeIn">Edit Brand</h1>
                </div>
                <form asp-action="Edit">
                    <div class="card-body animate__animated animate__delay-1s animate__fadeIn">
                        <h4 class="card-title">Brand Details</h4>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="card-footer form-group text-center animate__animated animate__delay-1s animate__fadeIn">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a asp-action="Index" class="btn btn-dark">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

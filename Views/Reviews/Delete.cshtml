@model SportFlex.Models.Review

@{
    ViewData["Title"] = "Delete Review";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card mt-5 animate__animated animate__backInUp">
                <div class="card-header bg-danger text-white">
                    <h1 class="text-center animate__animated animate__delay-1s animate__fadeIn">Delete Review</h1>
                </div>
                <div class="card-body animate__animated animate__delay-1s animate__fadeIn">
                    <h4>Review Details</h4>
                    <hr />
                    <dl class="row">
                        <dt class = "col-sm-2">
                            @Html.DisplayNameFor(model => model.Comment)
                        </dt>
                        <dd class = "col-sm-10">
                            @Html.DisplayFor(model => model.Comment)
                        </dd>
                        <dt class = "col-sm-2">
                            @Html.DisplayNameFor(model => model.CreatedAt)
                        </dt>
                        <dd class = "col-sm-10">
                            @Html.DisplayFor(model => model.CreatedAt)
                        </dd>
                        <dt class = "col-sm-2">
                            @Html.DisplayNameFor(model => model.User)
                        </dt>
                        <dd class = "col-sm-10">
                            @Html.DisplayFor(model => model.User!.Email)
                        </dd>
                        <dt class = "col-sm-2">
                            @Html.DisplayNameFor(model => model.Product)
                        </dt>
                        <dd class = "col-sm-10">
                            @Html.DisplayFor(model => model.Product!.Name)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-center animate__animated animate__delay-1s animate__fadeIn">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Details" asp-controller="Products" asp-route-id="@Model.ProductId" class="btn btn-dark">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
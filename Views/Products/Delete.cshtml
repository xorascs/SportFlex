@model SportFlex.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card mt-5 animate__animated animate__backInUp">
                <div class="card-header bg-danger text-white">
                    <h1 class="text-center animate__animated animate__delay-1s animate__fadeIn">Delete Product</h1>
                </div>
                <div class="card-body animate__animated animate__delay-1s animate__fadeIn">
                    <h4>Product Details</h4>
                    <hr />
                    <dl class="row">
                        <dt class = "col-sm-2">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class = "col-sm-10">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Brand)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Brand!.Name)
                        </dd>
                        <dt class = "col-sm-2">
                            @Html.DisplayNameFor(model => model.Category)
                        </dt>
                        <dd class = "col-sm-10">
                            @Html.DisplayFor(model => model.Category!.Name)
                        </dd>
                        <dt class = "col-sm-2">
                            @Html.DisplayNameFor(model => model.Color)
                        </dt>
                        <dd class = "col-sm-10">
                            @Html.DisplayFor(model => model.Color!.Name)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ImagePaths)
                        </dt>
                        <dd class="col-sm-10">
                            @if (Model.ImagePaths != null && Model.ImagePaths.Any())
                            {
                                <div class="form-group">
                                    <div class="d-flex flex-wrap">
                                        @foreach (var imagePath in Model.ImagePaths)
                                        {
                                            <img src="~/uploads/@imagePath" alt="Existing Image" class="img-thumbnail mx-2 mb-2 animate__animated animate__zoomIn" style="width: 350px; height: 200px;" data-bs-toggle="modal" data-bs-target="#imageModal" />
                                        }
                                    </div>
                                </div>
                            }
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-center animate__animated animate__delay-1s animate__fadeIn">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Index" class="btn btn-dark">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@model SportFlex.Models.User

@{
    ViewData["Title"] = "Register";
}

<style>
    .card {
        border: none;
        box-shadow: 0px 10px 15px rgba(0, 0, 0, 0.1);
        height: 100%;
    }

    .card-img {
        overflow: hidden;
        height: 100%;
    }

    .card-img img {
        height: 100%;
        object-fit: cover;
    }

    .card-title {
        color: #333;
    }

    .form-control {
        border-radius: 20px;
    }

    .col-md-6 {
        padding-right: 0px;
        padding-left: 0px;
    }
</style>

<div class="container">
    <div class="row justify-content-center mt-5 animate__animated animate__backInLeft">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title text-center display-4">Register</h1>
                    <hr />
                    <form asp-action="Register" class="animate__animated animate__fadeIn animate__delay-1s">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Login" class="control-label my-2"></label>
                            <input asp-for="Login" class="form-control" placeholder="Enter your username" />
                            <span asp-validation-for="Login" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label my-2"></label>
                            <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label my-2"></label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-dark btn-block mt-3">Register</button>
                            <a asp-action="Login" class="btn btn-dark btn-block mt-3">Login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-3 animate__animated animate__fadeInLeft animate__delay-1s" style="z-index: -1;">
            <div class="card">
                <div class="card-img">
                    <img src="~/images/login_register_img.jpeg" class="img-fluid" alt="Cover Image">
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
